{% extends 'base.html.twig' %}

{% block title %}Hung-gar Kung-Fu
{% endblock %}

{% block body %}
<body class"colorfond">
    <section class="contact container w-25  text-light">

        <h2 class="h3 mb-2 font-weight-normal mt-3 text-warning ">CONTACT</h2>

        {{ form_errors(formContact) }}

        {{ form_start(formContact) }}
            <div class="mb-3 d-flex text-li">
                <div class="me-3">
                    {{ form_label(formContact.nom) }}
                    {{ form_widget(formContact.nom) }}
                </div>
                <div>
                    {{ form_label(formContact.prenom) }}
                    {{ form_widget(formContact.prenom) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(formContact.email) }}
                {{ form_widget(formContact.email) }}
                <div id="emailHelp" class="form-text text-light">Votre email ne sera pas partag√©.</div>
            </div>

            <div class="mb-3">
                {{ form_label(formContact.sujet) }}
                {{ form_widget(formContact.sujet) }}
            </div>

            <div class="mb-3">
                {{ form_label(formContact.message) }}
                {{ form_widget(formContact.message) }}    
            </div>

            <button type="submit" class="btn btn-lg btn-warning mb-5">Envoyer</button>
        {{ form_end(formContact) }}

    </section
    </body>

